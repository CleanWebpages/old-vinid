<!DOCTYPE HTML PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <link rel="shortcut icon" href='@Url.Content("~/favicon.ico")' type="image/x-icon" />
    <link rel="icon" href='@Url.Content("~/favicon.ico")' type="image/x-icon" />
    @Styles.Render("~/Content/css")
    <link href="@Url.Content("~/Content/Admin.css")" rel="stylesheet" type="text/css" />
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/modernizr")
    <link href="@Url.Content("~/Content/jeasyui/themes/icon.css")" rel="Stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/jeasyui/themes/black/easyui.css")" rel="Stylesheet" type="text/css" />
    <style type="text/css">
        .panel-body{
            background-color:#000;
        }
        .panel-header{

        }
        .datagrid-header, .datagrid-td-rownumber {
        }
        .datagrid-toolbar, .datagrid-pager{
            background: #111;
        }
        .datagrid-row-alt {
            background: #222;
        }
        .datagrid-row-over,
        .datagrid-header td.datagrid-header-over {
            background: #333;
        }
        legend {
            width: auto;
        }
    </style>
    <script src="@Url.Content("~/Scripts/jquery.blockUI.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.cookie.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/jeasyui/jquery.easyui.min.js")" type="text/javascript"></script>
    <script type="text/javascript">
        $(function () {
            $('#cc').layout('panel', 'west').panel({
                onCollapse: function () {
                    if (document.getElementById("dg")) {
                        $("#dg").datagrid("resize", {
                            width: $(".layout-panel-center").width() - 8
                        });
                    }
                },
                onExpand: function () {
                    if (document.getElementById("dg")) {
                        $("#dg").datagrid("resize", {
                            width: $(".layout-panel-center").width() - 8
                        });
                    }
                },
                onResize: function (w, h) {
                    $("#aa").accordion("resize");
                    if (document.getElementById("dg")) {
                        $("#dg").datagrid("resize", {
                            width: $(".top-bar").width() - w - 8
                        });
                    }
                }
            });
        });

    </script>
    @RenderSection("page_header", false)
</head>
<body id="cc" class="easyui-layout">
    <div data-options="region:'north',title:'',split:false" style="height: 30px;">
        <div class="top-bar" style="width: 100%; height: 28px; line-height: 28px; overflow: visible;">
            <div style="float: left; padding: 0px 5px; color: #ccc;"></div>
            <div style="float: right; padding: 0px 15px; color: #ccc;">
                <span style="margin-right: 10px;"><a href='@Url.Action("Index", "Admin")'>@User.Identity.Name</a></span>
                <span style="margin-right: 10px;">[ @Html.ActionLink("Change Password", "ChangePassword", "Admin") ]</span>
                <span>[ <a href='@Url.Action("LogOff", "Account")' onclick="if(confirm('Are you sure to log out?')){return true;}else{return false;}">Log Out</a> ]</span>
            </div>
            <div style="clear: both;"></div>
        </div>
    </div>
    <div data-options="region:'west',title:'Navigator',split:true" style="width: 200px;">
        <div><img src='@Url.Content("~/Content/images/logo.png")' alt="" style="width:100%;" /></div>
        @RenderSection("nav", false)
    </div>
    <div data-options="region:'center',title:''" style="overflow: visible;">
        @RenderBody()
    </div>
</body>
</html>

